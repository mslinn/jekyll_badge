  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run selected Ruby file",
      "program": "ruby ${file}",
      "request": "launch",
      "type": "ruby_lsp"
    },
    {
      "name": "Attach ruby_lsp",
      "request": "attach",
      "type": "ruby_lsp",
    },
    {
      "args": [],
      "debugPort": "0",
      "name": "Debug current file with rdbg",
      "script": "${file}",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "name": "Attach with rdbg",
      "request": "attach",
      "type": "rdbg",
    },
    {
      "name": "RSpec - active spec file only",
      "program": "${workspaceFolder}/binstub/rspec -I ${workspaceFolder} ${file}",
      "request": "launch",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - all",
      "program": "${workspaceFolder}/binstub/rspec -I ${workspaceFolder}",
      "request": "launch",
      "type": "ruby_lsp",
    }
  ]
}
